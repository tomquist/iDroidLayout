<UIScrollView
    layout_width="match_parent"
    layout_height="match_parent"
    padding="10">
    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="vertical">
        <UIImageView
            id="android"
            layout_width="match_parent"
            layout_height="100"
            scaleType="centerInside"
            layout_gravity="center_horizontal"
            src="@drawable/android.jpg"/>
        <RelativeLayout
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="10">
            <TextView
                id="username_label"
                layout_width="100"
                layout_height="40"
                layout_alignParentLeft="true"
                layout_gravity="center_vertical"
                gravity="left|center_vertical"
                font="Helvetica-Bold"
                text="@string/values.username_label"/>
            <EditText
                id="username"
                background="@drawable/background1"
                layout_width="match_parent"
                layout_height="40"
                layout_toRightOf="username_label"
                layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="10">
            <TextView
                id="password_label"
                layout_width="100"
                layout_height="40"
                layout_alignParentLeft="true"
                layout_gravity="center_vertical"
                gravity="left|center_vertical"
                font="Helvetica-Bold"
                text="@string/values.password_label"/>
            <EditText
                id="password"
                background="@drawable/background1"
                layout_width="match_parent"
                layout_height="40"
                layout_toRightOf="password_label"
                layout_alignParentRight="true"/>    
        </RelativeLayout>
        <TextView
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_gravity="right"
            text="@string/values.formular_hint"
            textSize="10"
            textColor="#aaaaaa"/>
        <TextArea
            id="freeText"
            background="@drawable/background1"
            layout_width="match_parent"
            layout_height="200"
            layout_marginBottom="10"/>
        <TextView
            id="androidStatus"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="10"
            textSize="12"/>
        <LinearLayout
            layout_width="match_parent"
            layout_height="wrap_content"
            orientation="horizontal"
            gravity="center_horizontal">
            <UIButton
                id="submitButton"
                onClick="didPressSubmitButton"
                textColor="@color/button_color"
                background="@drawable/button_background"
                layout_width="100"
                layout_height="30"
                text="@string/values.submit_button_title"/>
            <UIButton
                id="toggleButton"
                onClick="didPressToggleButton"
                background="@drawable/background1"
                textColor="@color/button_color"
                layout_width="wrap_content"
                layout_height="30"
                layout_marginLeft="10"
                text="@string/values.toggle_android_button_title"/>
        </LinearLayout>
    </LinearLayout>
</UIScrollView>